@model pfeCLS_website.Models.Contact
@{
    ViewBag.Title = "EditContact";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .editB {
        padding-left: 25%;
        padding-top: 15%;
    }
</style>
<div class="editB">
    <h2 style="color:#ff8000;">MODIFIER :</h2><br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Contact</h4>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_msg)

            <div class="form-group">

                @*@Html.LabelFor(model => model.Nom_msg, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <div class="col-md-10">
                    Nom :
                    @Html.EditorFor(model => model.Nom_msg, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom_msg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Email_msg, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <div class="col-md-10">
                    Prenom :
                    @Html.EditorFor(model => model.Email_msg, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email_msg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Objet_msg, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <div class="col-md-10">
                    Objet :
                    @Html.EditorFor(model => model.Objet_msg, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Objet_msg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Message_msg, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <div class="col-md-10">
                    Message :
                    @Html.EditorFor(model => model.Message_msg, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Message_msg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-default" style="color:orangered;" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retour à la liste", "listContact")
        <br /><br /><br /><br /><br />
    </div>
</div>
