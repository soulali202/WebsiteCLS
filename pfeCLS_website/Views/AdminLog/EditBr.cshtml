@model pfeCLS_website.Models.Branche

@{
    ViewBag.Title = "EditBr";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                @Html.Partial("_Notifications")
                <h3 class="page-header"><i class="icofont-repair"></i>Modifier une branche</h3>
                <ol class="breadcrumb">
                    <li><i class="icofont-home"></i><a href="@Url.Action("EditBr","AdminLog")">Accueil</a></li>
                    <li>Branche</li>

                </ol>
            </div>
        </div>
        <!-- Form validations -->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Formulaire de modification :
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Branche</h4>
                                <hr />
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID_branche)

                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Nom_branche, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        Nom :
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Nom_branche, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Nom_branche, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Tele_part, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        Prix :
                                    </div>
                                    <div class="col-md-10">
                                 
                                        @Html.EditorFor(model => model.prix_branche, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.prix_branche, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.Tele_part, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <div class="col-md-10">
                                        Frais d'inscription :
                                    </div>
                                    <div class="col-md-10">
                                      
                                        @Html.EditorFor(model => model.frais_inscri, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.frais_inscri, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Modifier" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </section>
                <div>
                    <i class="icofont-reply"></i> @Html.ActionLink("retournez à la page précédente", "ListBranches")
                </div>
                <br /><br /><br /><br />
            </div>
        </div>
    </section>
</section>

